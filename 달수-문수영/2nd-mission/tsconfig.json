{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["react", "react-dom", "vite/client"],

    "strict": true,
    "skipLibCheck": true,

    "noEmit": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    "baseUrl": "."
  },
  "include": ["src", "vite.config.ts"]
}
